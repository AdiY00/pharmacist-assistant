      "/* Secondary: Mint/Sage (#98FF98 adjusted for visibility) */": "",
      "--secondary": "130 60% 90%",
      "--secondary-foreground": "196 100% 33%",
      "/* Muted: Light Grey for secondary text */": "",
      "--muted": "210 20% 96%",
      "--muted-foreground": "215 16% 47%",
