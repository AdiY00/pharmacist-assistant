      "--ring": "196 80% 50%",
      "--sidebar-background": "222 47% 10%",
      "--sidebar-foreground": "210 40% 98%",
      "--sidebar-primary": "196 80% 50%",
      "--sidebar-primary-foreground": "0 0% 100%",
      "--sidebar-accent": "217 33% 15%",
